<link rel="stylesheet" href="~/css/styletovarilist.css">
@model ShopMagazin.Models.PodCatG
@{
    ViewData["Title"] = Model.podcategs.NamePodCategori;
}
@addTagHelper *, ShopMagazin
<main class="content-main">
    <div class="con-man">
        <div class="main-div-left">
            <nav class="breadcrumbs">
                <span class="breadcrumbs__items" itemscope="" itemtype="https://schema.org/BreadcrumbList">
                    <a href="/" class="breadcrumbs__item">Главная</a>
                    <a asp-action="Podcategorii" asp-controller="Categorii" asp-route-id="@Model.categMain.Id" class="breadcrumbs__item" title="Бытовая техника для кухни" itemprop="itemListElement" itemscope="" itemtype="https://schema.org/ListItem">
                        @Model.categMain.NameCategori
                    </a>
                    <a class="breadcrumbs__item" asp-action="TovariPodcategorii" asp-controller="Categorii" asp-route-id="@Model.podcategs.Id" title="Бытовая техника для кухни" itemprop="itemListElement" itemscope="" itemtype="https://schema.org/ListItem">
                        @Model.podcategs.NamePodCategori
                    </a>
                </span>
                <a href="javascript:history.back()" class="breadcrumbs__back btn btn_transparent">
                    🠔Назад
                </a>
            </nav>
            <div class="product-detail">
                <header class="product-detail__header">
                    <h1 class="product-detail__title">@Model.tovar.NameTovar @Model.tovar.ModelTovar</h1>

                    <div class="product-detail__row product-detail__row_header">
                        <div class="product-detail__vendor-code">Артикул: @Model.tovar.articul</div>


                        <div class="product-detail__price">
                            <div class="price">
                                <span class="title">Цена:</span> @Model.tovar.Cena<span class="rubble">₽</span>
                            </div>
                        </div>
                    </div>
                </header>
                <section class="product-detail__section">
                    <div class="product-detail__row">
                        <div class="product-detail__images product-images">
                            <div class="product-images__detail-slider">
                                <div id="detailImageSlider" class="slick-initialized slick-slider">
                                    <div class="slick-list">
                                        <div class="slick-track" style="opacity: 1; width: 309px;">
                                            <div class="slick-slide slick-current slick-active" data-slick-index="0" aria-hidden="false" style="width: 309px; position: relative; left: 0px; top: 0px; z-index: 999; opacity: 1;">
                                                <div>
                                                    <div style="width: 100%; display: inline-block;">
                                                        <a href="@Url.Action("GetImage", new { id = Model.tovar.ImageId })" class="product-images__detail-image" target="_blank" data-index="0" tabindex="0">
                                                            <img style="max-width: 95%; max-height: 340px;" src="@Url.Action("GetImage", new { id = Model.tovar.ImageId })" alt="product image">
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="product-detail__preview-text">
                            <ul class="ul ul_inline-bullets">
                                <li>Страна-производитель:&nbsp;<b>@Model.tovar.StranaProizvoditel</b></li>
                                <li>Наименование товара:&nbsp;<b>@Model.tovar.NameTovar</b></li>
                                <li>Модель:&nbsp;<b>@Model.tovar.ModelTovar</b></li>
                                <li>Категория:&nbsp;<b>@Model.tovar.NameCategori</b></li>
                                <li>Подкатегория:&nbsp;<b>@Model.tovar.NamePodCategori</b></li>
                            </ul>
                            <div class="product-detail__buttons">
                                @if (User.Identity.IsAuthenticated == false)
                                {
                                    <a asp-controller="Home" asp-action="AuthenticateUser" style="height: auto; padding: 7px;" class="lklk btn_fullwidth btn_primary catalog-list__action">В корзину</a>
                                }
                                else
                                {
                                    if (Model.tovar.HasTovarInCart == false)
                                    {
                                    <a asp-controller="Home" asp-route-id_tovara="@Model.tovar.Id" asp-action="AddToCart" style="height: auto; padding: 7px;" class="btn_fullwidth btn_primary catalog-list__action">В корзину</a>
                                    }
                                    else if (Model.tovar.HasTovarInCart == true)
                                    {
                                    <a asp-controller="Categorii" asp-action="Korzina" style="height: auto; padding: 7px; background-color: #44c523; border-color: #44c523; color: #fff;" class="btn_fullwidth btn_primary catalog-list__action">В корзине</a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="alert">
                Производитель на свое усмотрение и без дополнительных уведомлений оставляет за собой право на внесение изменений в конструкцию, комплектацию, дизайн, страну производства и технические характеристики модели.<br>
                <b>Во избежание недоразумений проверяйте интересующие Вас свойства товара при его осмотре, перед оплатой и подписанием договора купли-продажи.</b> Вся информация на сайте носит справочный характер и не является публичной офертой.
            </div>
