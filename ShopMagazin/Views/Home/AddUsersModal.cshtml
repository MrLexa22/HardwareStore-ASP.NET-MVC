@model ShopMagazin.Models.User

<link rel="stylesheet" type="text/css" href="~/css/style_list.css" />
<script type="text/javascript" src="~/js/script_list.js" defer></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<div class="modal-content">
    <div class="modal-windows">
        <div class="obratnii-zvonok">
            <div class="form-add fformms" style="padding: 30px; background-color: #fff; border-radius: 5px; box-shadow: 1px 1px 10px 0 rgb(0 0 0 / 12%); color: #696969; ">
                <div class="zvonok-title">Добавление нового пользователя</div>
                <form asp-controller="Home" asp-action="AddUsersModal" method="post" class="callback-from">
                    <div class="form-zap">
                        <label asp-for="Email" class="nonrequired"></label>
                        <input type="text" asp-for="Email" class="inputs imz-in" />
                        <span asp-validation-for="Email" style="color: red;"></span>
                    </div>
                    <div class="form-zap">
                        <label asp-for="Password" class="nonrequired"></label>
                        <input type="password" asp-for="Password" class="inputs imz-in" />
                        <span asp-validation-for="Password" style="color: red;"></span>
                    </div>
                    <div class="form-zap">
                        <label asp-for="Ima" class="nonrequired"></label>
                        <input type="text" asp-for="Ima" class="inputs imz-in" />
                        <span asp-validation-for="Ima" style="color: red;"></span>
                    </div>
                    <div class="form-zap">
                        <label asp-for="Familia" class="nonrequired"></label>
                        <input type="text" asp-for="Familia" class="inputs imz-in" />
                        <span asp-validation-for="Familia" style="color: red;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role" class="nonrequired"></label>
                        <br />
                        <input asp-for="Role" type="text" id="rod" style="opacity: 0; width: 0px; height: 0px;" />
                        <span asp-validation-for="Role" style="color: red;"></span>
                        <div class="dropdown1" style="margin-bottom: 15px;">
                            <div class="select">
                                <span id="rod1">Выберите роль пользователя</span>
                                <i class="fa fa-chevron-left"></i>
                            </div>
                            <ul class="dropdown-menu1">
                                <li>Покупатель</li>
                                <li>Администратор</li>
                                <li>Оператор</li>
                            </ul>
                        </div>
                    </div>

                    <div class="form-zap">
                        <div class="btn-center">
                            <input class="sbm-zvonok" type="submit" value="Создать" />
                        </div>
                    </div>
                </form>
                <div class="btn-center">
                    <button class="sbm-zvonok otm" style="background-color: #c4c4c4; margin-top: 15px; color: White;" onclick='$(".modal-content").remove();'>Отмена</button>
                </div>
            </div>
        </div>
    </div>
</div>